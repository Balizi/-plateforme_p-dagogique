<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>PromosServlet</servlet-name>
        <servlet-class>administrateur.web.PromosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PromosServlet</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FormateurServlet</servlet-name>
        <servlet-class>administrateur.web.FormateurServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FormateurServlet</servlet-name>
        <url-pattern>*.fr</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ApprenantsServlet</servlet-name>
        <servlet-class>administrateur.web.ApprenantsServlete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApprenantsServlet</servlet-name>
        <url-pattern>*.app</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>login.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AppServlete</servlet-name>
        <servlet-class>formateurs.web.AppServlete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppServlete</servlet-name>
        <url-pattern>*.tech</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ApprServlete</servlet-name>
        <servlet-class>apprenants.web.AppServlete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApprServlete</servlet-name>
        <url-pattern>*.apr</url-pattern>
    </servlet-mapping>

</web-app>